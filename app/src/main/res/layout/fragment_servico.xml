<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/style_card"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="textStart">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
    >

        <TextView
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:id="@+id/idNome"
                android:textSize="18dp"
                android:textColor="@color/azul_marinho"
                android:fontFamily="@font/titilliumweb_bold"
                android:maxLength="20"
                android:layout_marginTop="5dp"
                android:text="Nome:"
                android:textAlignment="textStart"/>
        <TextView
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:id="@+id/nomeServico"
                android:textSize="18dp"
                android:textColor="@color/azul_marinho"
                android:fontFamily="@font/titilliumweb_light"
                android:maxLength="20"
                android:layout_marginTop="5dp"
                android:text="xxxx"
                android:textAlignment="textStart"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:id="@+id/idNome3"
                android:textSize="18dp"
                android:textColor="@color/azul_marinho"
                android:fontFamily="@font/titilliumweb_bold"
                android:maxLength="20"
                android:layout_marginTop="5dp"
                android:text="Sobrenome:"
                android:textAlignment="textStart" android:layout_weight="1"/>
        <TextView
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:id="@+id/descricaoServico"
                android:textSize="18dp"
                android:textColor="@color/azul_marinho"
                android:fontFamily="@font/titilliumweb_light"
                android:maxLength="20"
                android:layout_marginTop="5dp"
                android:text="xxxx"
                android:textAlignment="textStart"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:id="@+id/idNome4"
                android:textSize="18dp"
                android:textColor="@color/azul_marinho"
                android:fontFamily="@font/titilliumweb_bold"
                android:maxLength="20"
                android:layout_marginTop="5dp"
                android:text="Email:"
                android:textAlignment="textStart" android:layout_weight="1"/>
        <TextView
                android:layout_width="287dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/valorServico"
                android:textSize="18dp"
                android:textColor="@color/azul_marinho"
                android:fontFamily="@font/titilliumweb_light"
                android:text="R$ 900.00"
                android:textAlignment="textStart" android:gravity="bottom"/>
    </LinearLayout>


</LinearLayout>